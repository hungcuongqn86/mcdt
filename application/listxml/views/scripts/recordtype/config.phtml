    function addWard() {
        _save_xml_tag_and_value_list(document.forms[0], document.getElementsByName('hdn_xml_tag_list'),document.getElementsByName('hdn_xml_value_list'), true);
        var wardcodelist = $("#C_WARD_CODE_LIST").val();
